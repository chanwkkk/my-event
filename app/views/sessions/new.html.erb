<% if flash[:error]%>
<%= flash[:error] %>
<% end %>

<%= form_tag("/login", method: :post) do %>
    <%= label_tag(:email, "Your email:") %>
    <%= text_field_tag :'user[email]' %>

    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag :'user[password]' %>

    <%= submit_tag "Log in"%>


<% end %>